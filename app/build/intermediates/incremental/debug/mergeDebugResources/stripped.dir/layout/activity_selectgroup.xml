<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.aplikacja.ui.SelectgroupActivity">

    <ImageView
        android:id="@+id/bg2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg4" />

    <LinearLayout
        android:id="@+id/LinerGroup"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/enterBackSelect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/welcomeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="5sp"
            android:text="Wybierz grupę"
            android:textColor="#020202"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcomeDescSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="5sp"
            android:text="To jest bardzo ważny etap, od którego zależy dalsza funkcjonalność twojej aplikacji"
            android:textColor="#020202"
            android:textSize="34sp"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/enterBtnBlind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12sp"
            android:layout_marginTop="24sp"
            android:layout_marginBottom="0sp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#4F5058"
            android:fontFamily="sans-serif"
            android:text="Niewidomy"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LinerGroup" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/enterBtnVolunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12sp"
            android:layout_marginTop="24sp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#4F5058"
            android:fontFamily="sans-serif"
            android:text="WOLONTARIUSZ"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LinerGroup" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bgimg3" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enterBackSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12sp"
        android:layout_marginTop="24sp"
        android:layout_marginBottom="24sp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#4F5058"
        android:text="Wstecz"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LinerGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>